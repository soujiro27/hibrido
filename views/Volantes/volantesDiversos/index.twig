{% extends 'layoutTable.twig' %}
{% block btnHeader %}
    <a id="addRegister" href="/SIA/juridico/VolantesDiversos/create" class="btn btn-info btn-add" role="button">
        AÃ±adir Registro
    </a>
{% endblock %}

{% block order %}
  <div class="row">
        <button class="btn btn-info col-lg-12" id="btn-order" data-ruta="VolantesDiversos">
            <i class="fa fa-signal"></i> Ordernar
        </button>
    </div>
{% endblock %}



{% block table %}

    <table class="table table-hover"  id="main-table-volantes" data-ruta="VolantesDiversos">
        <thead >
        <tr>
            <th class="hidden">id</th>
            <th>Folio</th>
            <th>Documento</th>
            <th>Remitente</th>
            <th>Turnado</th>
            <th>Fecha</th>
            <th>Desfazado</th>
            <th>Estado</th>


        </tr>
        </thead>
        <tbody>
        {% for volante in volantes %}
            <tr data-ruta="VolantesDiversos">

                <td class="hidden">{{ volante.idVolante }}</td>
                <td>{{ volante.folio }} - {{ volante.subfolio }}</td>
                <td>{{ volante.numDocumento }}</td>
                <td>{{ volante.idRemitente }}</td>
                <td>{{ volante.idAreaRecepcion }}</td>
                <td>{{ volante.fRecepcion }}</td>
                <td>{{ volante.extemporaneo }}</td>
                {% if volante.idEstadoTurnado == 'CERRADO' %}
                    <td class="cerrado">{{ volante.idEstadoTurnado }}</td>
                {% else %}
                    <td>{{ volante.idEstadoTurnado }}</td>
                {% endif %}


            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}