{% extends 'layoutForm.twig' %}
{% block title %}Añadir Registro{% endblock %}
{% block form %}

<form class="form"  method="POST" data-ruta="Volantes" id="insert-volantes" enctype="multipart/form-data">
        
    <div class="row row-form">
        <div class="col-lg-2">
            <label for="idDocumento">Tipo de Documento</label>
            <select class="form-control" id="documento" name="documento"  data-auditoria='SI'>
                <option value="">Escoga una Opcion</option>
                    {% for documento in documentos %}
                        <option value="{{ documento.idTipoDocto }}">{{ documento.nombre }}</option>
                    {% endfor %}
            </select>
        </div>

        <div class="col-lg-3">
            <label for="subDocumento">Tipo de SubDocumento</label>
            <select class="form-control" id="subDocumento" name="subDocumento" >
                <option value="">Escoga una Opcion</option>
            </select>
            <input id="notaConfronta" type="hidden" value="NO" name="notaConfronta"/>
        </div>

        <div class="col-lg-2">
            <label for="subDocumento">Promocion de Accion</label>
            <select class="form-control" id="promocion" name="promocion" >
                <option value="">Escoga una Opcion</option>
                <option value="SI"> SI</option>
                <option value="NO"> NO </option>
            </select>
        </div>

        <div class="col-lg-2">
            <label for="extemporaneo">Extemporáneo</label>
            <select class="form-control" id="extemporaneo" name="extemporaneo" >
                <option value="">Escoga una Opcion</option>
                <option value="SI"> SI</option>
                <option value="NO"> NO </option>
            </select>
        </div>

        <div class="col-lg-2">
            <label for="cveAuditoria">Auditoria</label>
            <div class="addAuditoriaContainer">
                <button class="btn btn-info" id="modalAuditoria"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                <span id="auditoria">No. Auditoria</span>
                <input id="cveAuditoria" type="hidden" name="cveAuditoria" value="" />
                <input type="hidden" id="cta-publica" value="{{ cuenta }}" data-cuenta="{{ cuenta }}" >
            </div>
        </div>
           
    </div>
        
    <div>
        <div class="row row-form">
            <div class="col-lg-2">
                <label for="Folio">Folio</label>
                <input 
                    class="form-control" 
                    type="number" 
                    name="folio"
                    min="1"
                    max="9999"
                    patter="[0-9]+"
                />
            </div>

            <div class="col-lg-2">
                <label for="subFolio">subFolio</label>
                <input 
                    class="form-control" 
                    type="number" 
                    name="subFolio"  
                    value="0"
                    min="0"
                    max="99"
                    pattern="[0-9]+" 
                />
            </div>
                
            <div class="col-lg-4">
                <label for="numDocumento">Numero de Documento</label>
                <input 
                    class="form-control" 
                    type="text" 
                    name="numDocumento"
                    maxlength="20"
                />
            </div>

            <div class="col-lg-2">
                <label for="anexos">Numero de Anexos</label>
                <input 
                    class="form-control" 
                    type="number" 
                    name="anexos"  
                    pattern="[0-9]+"
                    min="0"
                    max="99"
                />
            </div>    
        </div>
            
        <div class="row row-form">
            <div class="col-lg-3">
                <label for="fDocumento">Fecha de Documento</label>
                <input 
                    class="form-control fechaInput" 
                    type="text" 
                    name="fDocumento"  
                    pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))"
                    />
            </div>

            <div class="col-lg-3">
                <label for="fRecepcion">Fecha de Recepcion</label>
                <input 
                    class="form-control fechaInput"  
                    type="text" 
                    name="fRecepcion"  
                    pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))"/>
            </div>
                
            <div class="col-lg-3">
                <label for="hRecepcion">Hora de Recepcion</label>
                <input 
                    class="form-control" 
                    type="time" 
                    name="hRecepcion"  
                    pattern="([0-1]{1}[0-9]{1}|20|21|22|23):[0-5]{1}[0-9]{1}" 
                    placeholder="00:00" 
                    min="08:00"
                    max="18:15"
                    />
                </div>
            </div>

        <div class="row row-form">
            <div class="col-lg-8">
                <label for="idRemitente">Remitente</label>
                <input 
                    class="form-control" 
                    id="idRemitente" 
                    type="text" 
                    name="idRemitente" 
                    readonly 
                />
            </div>
               
        </div>
            
        <div class="row row-form">
            <div class="col-lg-8">
                <label for="Asunto">Asunto</label>
                <textarea 
                    class="form-control" 
                    rows="3" 
                    name="asunto"  
                    placeholder="Asunto"
                    maxlength="350" 
                ></textarea>
                </div>
        </div>

        <div class="row row-form">
            <div class="col-lg-8">
                <label for="idRemitente">Deseas Anexar un Archivo</label>
                <input class="form-control" id="file" type="file" name="file"  />
            </div>       
        </div>

        <div class="row row-form">
            <div class="col-lg-3">
                <label for="idCaracter">Caracter</label>
                <select class="form-control" id="idCaracter" name="idCaracter" >
                    <option value="">Escoga una Opcion</option>
                        {% for caracter in caracteres %}
                            <option value="{{ caracter.idCaracter }}">{{ caracter.nombre }}</option>
                        {% endfor %}
                </select>
            </div>
            
            <div class="col-lg-6">
                <label for="idTurnado">Turnado a:</label>
                <select class="form-control" id="idTurnado" name="idTurnado" >
                    <option value="">Escoga una Opcion</option>
                    {% for area in areas %}
                        <option value="{{ area.idArea }}">{{ area.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
                
            <div class="col-lg-3">
                <label for="idAccion">Instruccion</label>
                <select class="form-control" id="idAccion" name="idAccion" >
                    <option value="">Escoga una Opcion</option>
                    {% for accion in acciones %}
                        <option value="{{ accion.idAccion }}">{{ accion.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
        
    <div class="row row-form btn-save">
        <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/ id="submit">
        <button class="btn btn-danger btn-sm" id="cancelar" data-ruta="Volantes" >Cancelar</button>
    </div>
</form>
{% endblock %}