{% extends 'layoutForm.twig' %}
{% block title %}AÃ±adir Registro{% endblock %}
{% block form %}
<form id="Caracteres-update" method="POST"  data-ruta="Caracteres">

    <div class="form-group row">
        <label class="form-control-label col-lg-1" for="siglas">Siglas</label>
        <div class="col-lg-2">
            <input 
                class="form-control"  
                type="text" 
                placeholder="Siglas"  
                name="siglas"  
                value="{{ caracter.siglas | trim }}"
                maxlength="2"
                pattern="[A-Za-z]+" 
            />
            
            <input 
                type="hidden" 
                name="idCaracter" 
                value="{{ caracter.idCaracter }}" 
            />

        </div>
    </div>

    <div class="form-group row nombre">
        <label class="form-control-label col-lg-1" for="nombre">Nombre</label>
        <div class="col-lg-2">
            <input 
                class="form-control" 
                type="text" 
                placeholder="Nombre"  
                name="nombre"  
                maxlength="10" 
                value="{{ caracter.nombre }}" 
                pattern="[A-Za-z]+"
            />
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-lg-1" for="estatus">Estatus</label>
        <div class="col-lg-2">
            <select class="form-control" name="estatus">
                <option value="ACTIVO" {% if caracter.estatus == 'ACTIVO' %} selected {% endif %}>ACTIVO</option>
                <option value="INACTIVO" {% if caracter.estatus == 'INACTIVO' %} selected {% endif %}>INACTIVO</option>
            </select>
        </div>
    </div>
    <div class="form-group send">
        <input class="btn btn-info" type="submit" value="Guardar"/>
        <button class="btn btn-danger" id="cancelar" data-ruta="Caracteres">Cancelar</button>
    </div>
</form>
    
{% endblock %}