{% extends 'layoutForm.twig' %}
{% block title %}Nuevo Registro{% endblock %}
{% block form %}
<form id="Caracteres-insert" method="POST"  data-ruta="Caracteres">

    <div class="form-group row">
        <label class="col-lg-1" for="siglas">Siglas</label>
        <div class="col-lg-2">
            <input 
                class="form-control input" 
                type="text" 
                placeholder="Siglas"  
                pattern="[a-zA-Z]+" 
                name="siglas" 
                maxlength="2"
                required
            />
           
        </div>
        
    </div>
    
    <div class="form-group row ">
        <label class="col-lg-1" for="nombre">Nombre</label>
        <div class="col-lg-2">
            <input 
                class="form-control input" 
                type="text" 
                placeholder="Nombre" 
                name="nombre" 
                pattern="[a-zA-Z]+"
                maxlength="10" 
                required         
            />
            
        </div>

    </div>

    <div class="form-group send">
        <input class="btn btn-primary" type="submit" value="Guardar"/>
        <button class="btn btn-danger" id="cancelar" data-ruta="Caracteres">Cancelar</button>
    </div>
</form>
  
{% endblock %}