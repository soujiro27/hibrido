{% extends 'layoutForm.twig' %}
{% block title %}Actualizar Registro{% endblock %}
{% block form %}
    <form id="update-acciones" method="POST"  data-ruta="Acciones">
        <div class="form-group row">
            <label class="form-control-label col-lg-1" for="nombre">Nombre </label>
            <input 
                class="form-control col-lg-2" 
                type="text" 
                placeholder="Nombre"  
                pattern="[A-Za-z]+" 
                name="nombre" 
                maxlength="50" 
                value="{{ accion.nombre }}"/>
        </div>
        <div class="form-group row">
            <label class="form-control-label col-lg-1" for="estatus">Estatus</label>
            <select name="estatus" id="estatus" class="form-control col-lg-2">
                {% if accion.estatus | trim =='ACTIVO' %}
                    <option value="ACTIVO" selected>ACTIVO</option>
                    <option value="INACTIVO" >INACTIVO</option>
                {% else %}
                    <option value="ACTIVO" >ACTIVO</option>
                    <option value="INACTIVO" selected>INACTIVO</option>
                {% endif %}
            </select>
            <input type="hidden" name="idAccion" value="{{ accion.idAccion }}">
        </div>
        <div class="form-group send">
            <input class="btn btn-primary btn-sm" type="submit" value="Actualizar"/>
            <button class="btn btn-danger btn-sm" id="cancelar" data-ruta="Acciones">Cancelar</button>
        </div>
    </form>
{% endblock %}