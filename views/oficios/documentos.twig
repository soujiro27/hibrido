{% extends 'layoutForm.twig' %}
{% block title %}
  <div class="header-menu-oficios">
    <button class="btn btn-info" id="menu-oficios"><i class="fa fa-th-list"></i></button>
    <span>Respuestas</span>
    <div class="menu-oficios">
      <ul>
        <li>
          <a href="/SIA/juridico/{{ ruta }}/{{ id }}">Asignacion</a>      
        </li>
        {% if cedula %}
          <li>
            <a href="/SIA/juridico/{{ ruta }}/Observaciones/{{ id }}">Observaciones</a>
          </li>
          <li>
            <a href="/SIA/juridico/{{ ruta }}/Cedula/{{ id }}">Cedula</a>
          </li>
        {% endif %}
      </ul>
    </div>
    
    
  </div>
{% endblock %}

{% block btnHeader %}
  
  <button class="btn btn-primary" id="request-turno" data-id="{{ id }}" >Responder</button>
  
{% endblock %}


{% block form %}
  <div class="personal">
     <select class="col-lg-4 form-control personal" id="personal-turnado" data-id="{{ id }}">
        <option value="">Escoga Personal</option>
        {% for turno in turnados %}
        <option value="{{turno.idPuestoJuridico}}">{{turno.saludo}} {{turno.nombre}} {{turno.paterno}} {{turno.materno}}</option>
        {% endfor %}
      </select>
  </div>
  <div id="datos-turnado" data-idUsuario="{{sesiones.idUsuario}}"></div>
{% endblock %}
