{% extends 'layoutForm.twig' %}
{% block title %}
  <div class="header-irac">
    <a  href="/SIA/juridico/Ifa/{{ id }}">Nueva Asignacion</a>
    <a href="#!" class="active">Respuestas</a>
  </div>
{% endblock %}

{% block btnHeader %}
  
  <button class="btn btn-primary" id="request-turno" data-id="{{ id }}" >Responder</button>
  
{% endblock %}


{% block form %}
  <div class="personal">
     <select class="col-lg-4 form-control personal" id="personal-turnado" data-id="{{ id }}">
        <option value="">Escoga Personal</option>
        {% for turno in turnados %}
        <option value="{{turno.idPuestoJuridico}}">{{turno.saludo}} {{turno.nombre}} {{turno.paterno}} {{turno.materno}}</option>
        {% endfor %}
      </select>
  </div>
  <div id="datos-turnado" data-idUsuario="{{sesiones.idUsuario}}"></div>
{% endblock %}
