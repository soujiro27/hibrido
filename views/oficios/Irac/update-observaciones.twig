{% extends 'layoutForm.twig' %}

{% block btnHeader %}
    <a  href ="/SIA/juridico/{{ruta}}/Observaciones/{{ obsv.idVolante }}" class="btn btn-info btn-color" role="button" id="add-btn-observaciones" data-volante="{{ obsv.idVolante }}">
        Mostrar Observaciones
    </a>
{% endblock %}


{% block title %}
  <div class="header-menu-oficios">
    <button class="btn btn-info" id="menu-oficios"><i class="fa fa-th-list"></i></button>
    <span>Observaciones</span>
    <div class="menu-oficios">
      <ul>
        <li>
          <a href="/SIA/juridico/{{ ruta }}/{{ obsv.idVolante }}">Asignacion</a>      
        </li>
        <li>
          <a href="/SIA/juridico/{{ ruta }}/historial/{{ obsv.idVolante }}">Respuestas</a>      
        </li>
        {% if cedula %}
          <li>
            <a href="/SIA/juridico/{{ ruta }}/cedula/create/{{ obsv.idVolante }}">Cedula</a>
          </li>
        {% endif %}
      </ul>
    </div>
    
    
  </div>
{% endblock %}

{% block form %}

<form class="form update-observaciones" id="Observaciones-update" method="POST" data-ruta="Irac">
    <div>
        <div class="form-group pagina row">
            <label for="text" class="col-lg-2">Pagina</label>
            <input type="hidden" name="idObservacionDoctoJuridico" value="{{ obsv.idObservacionDoctoJuridico }}" />
            <input 
                class="form-control col-lg-2"  
                type="text" 
                name="pagina" 
                maxlength="50"
                value="{{ obsv.pagina }}"
            />
        </div>
        

        <div class="form-group parrafo row">
                <label for="parrafo" class="col-lg-2">Parrafo</label>
                <input 
                    class="form-control col-lg-2" 
                    type="text" 
                    name="parrafo"
                    maxlength="50"
                    value="{{ obsv.parrafo }}"
                />
            </div>
        </div>

        <div class="row form-group">
            <label class="form-control-label col-lg-2" for="estatus">Estatus</label>
            <select name="estatus" id="estatus" class="form-control col-lg-2">
                {% if obsv.estatus | trim =='ACTIVO' %}
                    <option value="ACTIVO" selected>ACTIVO</option>
                    <option value="INACTIVO" >INACTIVO</option>
                {% else %}
                    <option value="ACTIVO" >ACTIVO</option>
                    <option value="INACTIVO" selected>INACTIVO</option>
                {% endif %}
            </select>
        </div>  

        <div class="row">
            <label for="observacion" class="col-lg-2">Observacion</label>
            <textarea class=" col-lg-9" id="ckeditor" rows="3" name="observacion">{{ obsv.observacion }}</textarea>
        </div>

         
        <div class="for

        <div class="envio">
            <div class="form-group send">
                <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/>
                <button class="btn btn-danger" id="cancelar" data-ruta="Irac">Cancelar</button>
            </div>
        </div>
    </form>
{% endblock %}